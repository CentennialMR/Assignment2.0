<%-include ('../partials/header.ejs');%>
<%-include ('../partials/main_nav.ejs');%>


<div class="center">
    <h1 style="color:#2d1b70;margin-top:30px">Update Bussiness Contact</h1>
    </div>


<!--content for the Add page-->
<div class = "container">
    <div class = "row">
        <div class ="offset-md-3 col-md-6">
        
        <form class = "form" method="POST">
            <div class ="form group">
                <label for="nameTextField">Bussiness Contact</label>
                <input type="text" class="form control"
                id="nameTextField"
                placeholder="Enter the Bussiness Contact name"
                name="name"
                value="<%=bcontact.name%>"
                required>
            </div>

            <div class ="form group">
                <label for="numberTextField">Contact Number</label>
                <input type="text" class="form control"
                id="numberTextField"
                placeholder="Enter the Contact's number"
                name="number" 
                value="<%=bcontact.number%>"
                required>
            </div>

            <div class ="form group">
                <label for="emailTextArea">Email Address</label>
                <input type="text" class="form control"
                id="emailTextField"
                placeholder="Enter the Contact's email address"
                name="email" 
                value="<%=bcontact.email%>"
                required>
            </div>

            <button class = "btn btn-primary" type="update"><i class ="fas fa-edit"></i>Submit</button>
            <a href='/bcontactList' class="btn btn-warning"><i class="fas fa-undo"></i>Cancel</a>  
        
        </form>
        </div>
        </div>
    </div>


  
<%- include('../partials/bottom_nav'); -%>
<%- include('../partials/footer'); -%>

