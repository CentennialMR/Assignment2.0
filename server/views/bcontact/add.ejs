<%-include ('../partials/header.ejs');%>
<%-include ('../partials/main_nav.ejs');%>

<!--content for the Add page-->

<div class="center">
    <h1 style="color:#2d1b70;margin-top:30px">Add Bussiness Contact</h1>
    </div>

<div class = "container">
    <div class = "row">
        <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>
        <form class = "form" method="POST">
                <div class ="form group">
                    <label for="nameTextField">Bussiness Contact Name</label>
                    <input type="text" class="form control"
                    id="nameTextField"
                    placeholder="Enter the Bussiness Contact name"
                    name="name" required>
                </div>

                <div class ="form group">
                    <label for="numberTextField">Contact Number</label>
                    <input type="text" class="form control"
                    id="numberTextField"
                    placeholder="Enter the Contact's number"
                    name="number" required>
                </div>

                <div class ="form group">
                    <label for="emailTextArea">Email Address</label>
                    <textarea type="text" class="form control"
                    id="emailTextArea"
                    placeholder="Enter the Contact's email address"
                    name="email" required></textarea>
                </div>

                <button class = "btn btn-primary" type="submit"><i class = "fas fa-edit"></i>submit</button>
                <a href="/bcontactList" class="btn btn-warning"><i class="fas fa-undo"></i>cancel</a> 
            
        </form>
        </div>
        </div>
    </div>

<%- include('../partials/bottom_nav'); -%>
